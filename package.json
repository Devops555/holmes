{
  "name": "holmes.js",
  "version": "1.16.0",
  "description": "Fast and easy searching inside a page.",
  "main": "js/holmes.js",
  "jsnext:main": "js/main.js",
  "files": [
    "js/holmes.js",
    "js/main.js"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "npm run lint && npm run flow && npm run jest",
    "lint": "eslint js/main.js",
    "flow": "flow",
    "jest": "jest --coverage",
    "doc": "jsdoc -t node_modules/hopsdoc -c jsdoc.json -R README.md -d doc js/main.js",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "keywords": [
    "search",
    "dom",
    "filter"
  ],
  "author": "Haroen Viaene <hello@haroen.me>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Haroenv/holmes.git"
  },
  "eslintConfig": {
    "env": {
      "es6": true
    },
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ],
    "settings": {
      "flowtype": {
        "onlyFilesWithFlowAnnotation": true
      }
    },
    "extends": [
      "plugin:flowtype/recommended",
      "xo-space/browser"
    ]
  },
  "bugs": {
    "url": "https://github.com/Haroenv/holmes/issues"
  },
  "homepage": "https://haroen.me/holmes/",
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-plugin-transform-flow-strip-types": "^6.21.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "coveralls": "^2.11.12",
    "eslint": "^3.13.1",
    "eslint-config-xo-space": "^0.15.0",
    "eslint-plugin-flowtype": "^2.30.0",
    "flow-bin": "^0.37.0",
    "hopsdoc": "haroenv/hopsdoc#v0.1.9",
    "jest": "^18.1.0",
    "jsdoc": "^3.4.0",
    "jsdoc-babel": "^0.2.1",
    "rollup": "^0.41.4",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-uglify": "^1.0.1"
  }
}
